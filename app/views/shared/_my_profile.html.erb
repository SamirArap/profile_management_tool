<div class="card">
  <div class="card-header">
    User Profile
  </div>
  <div class="card-body">
      <div class="row">
        <div class="col-md-4">
          <p><%= fa_icon "envelope-o" %>  <%= current_user.email %> </p>
        </div>
        <div class="col-md-3">
          <h2><%= fa_icon "user" %> <%= current_user.full_name %> </h2>
        </div>
        <div class="col-md-5">
          <div class="row">
            <div class="col-md-6">
              <p><%= link_to " Edit profile", edit_user_registration_path, class: "btn btn-info btn-lg btn-block fa fa-cog fa-lg" %></p>
            </div>
            <div class="col-md-6">
              <p><%= link_to " Delete profile", user_registration_path, data: { confirm: "Are you sure you want to delete this account?" },
                          method: :delete, class: "btn btn-danger btn-lg btn-block fa fa-trash-o fa-lg" %></p>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>