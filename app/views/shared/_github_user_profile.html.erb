<div class="card">
  <div class="row">
    <div class="col-md-8"> <!--image and personal info -->
      <% @github_user.each do |user| %>
        <div class="row">
          <div class="col-md-6"> <!--image, edit and delete buttons -->
            <div class="card border-light mb-3" style="max-width: 20rem;">
              <div class="card-body">
                <p><%= image_tag(user.avatar_url, size: "300x300", class: "img-fluid", style: "max-width:100%;height:auto;") %><p>
                <p><%= link_to " Edit profile", edit_user_registration_path, class: "btn btn-primary btn-lg btn-block fa fa-cog fa-lg" %></p>
                <p><%= link_to " Delete profile", user_registration_path, data: { confirm: "Are you sure you want to delete this account?" },
                                 method: :delete, class: "btn btn-danger btn-lg btn-block fa fa-trash-o fa-lg" %></p>
              </div>
            </div>
          </div>
          <div class="col-md-6"><!--personal info and information from github -->
            <div class="card border-light mb-3" style="max-width: 20rem;">
              <div class="card-header">Personal information</div>
              <div class="card-body">
                <h2><%= fa_icon "user" %> <%= current_user.full_name %></h2>
                <p><%= fa_icon "envelope-o" %>  <%= current_user.email %></p>
              </div>
            </div>

            <div class="card border-light mb-3" style="max-width: 20rem;">
              <div class="card-header">Github information</div>
              <div class="card-body">
                <p><%= fa_icon "link" %> <%= link_to user.login, user.html_url, :target => "_blank" %></p>
                <p><%= fa_icon "map-marker" %> <%= user.location %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col-md-4"> <!--repositories -->
        <div class="card border-light mb-3" style="max-width: 20rem;">
          <div class="card-header">Repositories</div>
          <div class="card-body">
            <%  @my_repositories.each do |repo| %>
              <p><%= fa_icon "book" %><%= link_to repo.name, repo.html_url, target: "_blank" %></p>
            <% end %>
            <%= paginate @my_repositories %>
          </div>
        </div>
    </div>
  </div>
</div>



