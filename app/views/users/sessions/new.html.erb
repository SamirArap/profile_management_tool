<div class="box">
  <h2 class="text-center">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group">
        <div class="row">
          <div class="col-md-4 offset-md-4">
            <%= f.email_field :email, class:"form-control", autofocus: true, placeholder: "Email" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-md-4 offset-md-4">
            <%= f.password_field :password, class:"form-control", autocomplete: "off", placeholder: "Password" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-md-4 offset-md-4">
            <%= f.submit "Log in", class: "btn btn-lg btn-success btn-block" %>
          </div>
        </div>
      </div>
    <% end %>
</div>

<div class="form-group text-center">
  <div class="col-md-4 offset-md-4">
    New user?  <%= link_to "Sign up", new_user_registration_path  %>
  </div>
</div>
